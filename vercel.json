{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    },
    {
      "src": "backend/src/api.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/src/api.ts"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/frontend/assets/$1"
    },
    {
      "source": "/login.html",
      "destination": "/frontend/login.html"
    },
    {
      "source": "/login",
      "destination": "/frontend/login.html"
    },
    {
      "source": "/admin.html",
      "destination": "/frontend/admin.html"
    },
    {
      "source": "/admin",
      "destination": "/frontend/admin.html"
    },
    {
      "source": "/teams.html",
      "destination": "/frontend/teams.html"
    },
    {
      "source": "/teams",
      "destination": "/frontend/teams.html"
    },
    {
      "source": "/dashboard.html",
      "destination": "/frontend/dashboard.html"
    },
    {
      "source": "/dashboard",
      "destination": "/frontend/dashboard.html"
    },
    {
      "source": "/",
      "destination": "/frontend/login.html"
    }
  ],
  "alias": ["hockey-management.vercel.app"],
  "github": {
    "autoAlias": false
  }
}
